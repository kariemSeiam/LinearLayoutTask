<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        app:cardBackgroundColor="#F8F8F8"
        app:cardCornerRadius="16dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="7">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="14sp"
                android:src="@drawable/profile_img" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8sp"
                    android:text="Ahmed Hassan"
                    android:textColor="#252525"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/montserrat" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/job_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8sp"
                    android:text="Engineer"
                    android:textColor="#DE2965A1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/montserrat" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/location_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8sp"
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="2dp"
                    android:fontFamily="@font/montserrat"
                    android:text="UK"
                    android:textColor="#99263238"

                    android:textSize="16sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/reviews_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_star"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="(150 Reviews)  4.5"
                    android:textColor="#263238"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|end"
                android:orientation="vertical"
                android:paddingEnd="16dp"

                >

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/time_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_rounded_background"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:paddingStart="14dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="14dp"
                    android:paddingBottom="4dp"
                    android:text="3 hr"
                    android:textColor="#FFF7F7"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/language_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="Russian"
                    android:textColor="#DE2F669E"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14sp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="5 Days ago"
                    android:textColor="#66122940"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>