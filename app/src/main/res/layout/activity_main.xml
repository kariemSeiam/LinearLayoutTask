<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        app:cardBackgroundColor="#F8F8F8"
        app:cardCornerRadius="16dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="7">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="14sp"
                android:src="@drawable/profile_img"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6sp"
                    android:text="@string/name"
                    android:textColor="#252525"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/dm_sans" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/job_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6sp"
                    android:fontFamily="@font/dm_sans"
                    android:text="@string/job_text_view"
                    android:textColor="#DE122940"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/location_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6sp"
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="2dp"
                    android:layout_marginStart="-2dp"
                    android:fontFamily="@font/dm_sans"
                    android:text="@string/location_text_view"
                    android:textColor="#263238"

                    android:textSize="14sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/reviews_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_star"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/dm_sans"
                    android:gravity="center"
                    android:text="@string/reviews_text_view"
                    android:textColor="#000000"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="end"
                android:orientation="vertical"
                android:paddingEnd="16dp"
                android:paddingTop="2dp"

                >

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/time_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_rounded_background"
                    android:fontFamily="@font/dm_sans"
                    android:gravity="center"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginTop="14sp"
                    android:text="@string/time_text_view"
                    android:textColor="#FFF7F7"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/language_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6sp"
                    android:fontFamily="@font/dm_sans"
                    android:gravity="center"
                    android:text="@string/language_text_view"
                    android:textColor="#DE122940"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:fontFamily="@font/dm_sans"
                    android:gravity="center"
                    android:text="@string/last_time"
                    android:id="@+id/last_time"
                    android:textColor="#61122940"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>